@page "/EditUser/{Id}"
@using Employee_Crud_Blazor.Data
@inject UsersService userService
@inject NavigationManager NavigationManager

<h3>Edit Employee</h3>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="for-group">
                <label for="Id" class="control-label">Employee No</label>
                <input form="Id" class="form-control" @bind="@obj.Id" />
            </div>
            <div class="for-group">
                <label for="FirstName" class="control-label">First Name</label>
                <input form="FirstName" class="form-control" @bind="@obj.FirstName" />
            </div>
            <div class="for-group">
                <label for="LastName" class="control-label">Last Name</label>
                <input form="LastName" class="form-control" @bind="@obj.LastName" />
            </div>
            <div class="for-group">
                <label for="Email" class="control-label">Email Address</label>
                <input form="Email" class="form-control" @bind="@obj.Email" />
            </div>
            <div class="for-group">
                <label for="Login" class="control-label">Login</label>
                <input form="Login" class="form-control" @bind="@obj.Login" />
            </div>
            <div class="for-group">
                <label for="Password" class="control-label">Password</label>
                <input form="Password" class="form-control" @bind="@obj.Password" />
            </div>
            <div class="for-group">
                <label for="Password2" class="control-label">Password2</label>
                <input form="Password2" class="form-control" @bind="@obj.Password2" />
            </div>
            <div class="for-group">
                <label for="CreateDate" class="control-label">Create Date</label>
                <input form="CreateDate" class="form-control" @bind="@obj.CreateDate" />
            </div>
            <div class="for-group">
                <label for="DeleteDate" class="control-label">Delete Date</label>
                <input form="DeleteDate" class="form-control" @bind="@obj.DeleteDate" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateUser" value="Update Employee" />
                <input type="button" class="btn btn-danger" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    Users obj = new Users();

    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => userService.GetUserById(Convert.ToInt32(Id)));
    }

    protected async void UpdateUser()
    {
        await userService.UpdateUserDetails(obj);
        NavigationManager.NavigateTo("Users");
    }
    protected async void Cancel()
    {
        NavigationManager.NavigateTo("Users");
    }
}
