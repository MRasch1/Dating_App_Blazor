@page "/Users"
@using Employee_Crud_Blazor.Data
@inject UsersService employeesService


<NavLink class="nav-link" href="AddNewUser">
    <span class="oi oi-plus" aria-hidden="true"> Add New User</span>
</NavLink>

<h3>User List</h3>

@if (EmpObj is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    User Id
                </th>
                <th>
                    User FullName
                </th>
                <th>
                    Email Address
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var emp in EmpObj)
            {
                <tr>
                    <td>
                        @emp.Id
                    </td>
                    <td>
                        @emp.FullName
                    </td>
                    <td>
                        @emp.Email
                    </td>
                    <td>
                        @emp.CreateDate
                    </td>
                    <td>
                        <a class="nav-link btn btn-primary" href="EditEmployee/@emp.Id">
                            <span class="oi oi-pencil" aria-hidden="true"> Edit</span>
                        </a>
                    </td>
                    <td>
                        <a class="nav-link btn btn-danger" style="color: white" href="DeleteEmployee/@emp.Id">
                            <span class="oi oi-trash" aria-hidden="true"> Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Users> EmpObj;

    protected override async Task OnInitializedAsync()
    {
        EmpObj = await Task.Run(() => employeesService.GetAllEmployees());
    }

}
